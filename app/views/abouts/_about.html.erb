<div id="<%= dom_id about %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= about.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= about.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= about.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this about", about, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this about', edit_about_path(about), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
