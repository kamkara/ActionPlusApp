<% @title="Accueil" %>
<!-- component -->

<div class="container-xxl bg-gray-200 p-0">
        
        <!-- Navbar Start -->
        <div class="container-fluid nav-bar bg-transparent">
            <%= render "welcome/shared/navbar" %>
        </div>
        <!-- Navbar End -->

        <!-- Header Start -->
        <div class="container-fluid header bg-white p-0">
            <%= render "welcome/shared/header" %>
        </div>
        <!-- Header End -->


        <!-- Donate form -1 -->
        <div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
            <%= render "welcome/shared/donate" %>
        </div>
        <!-- Donate End -->

        <!-- Actions Start -->
        <div class="container-xxl py-5">
            <%= render "welcome/shared/actions" %>
        </div>
        <!-- Actions End -->

        <!-- Adherant Start -->
        <div class="container-xxl py-5">
            <%= render "welcome/shared/adherant" %>
        </div>
        <!-- Adherant End -->

        <!-- Property List Start -->
        <div class="container-xxl py-5">
            <%= render "welcome/shared/terrain" %>
        </div>
        <!-- Property List End -->


        <!-- Call to Action Start -->
        <div class="container-xxl py-5">
            <%= render "welcome/shared/join" %>
            
        </div>
        <!-- Call to Action End -->


        <!-- Team Start -->
        <div class="container-xxl py-5">
            <%= render "welcome/shared/engaged" %>
            
        </div>
        <!-- Team End -->


        <!-- Testimonial Start -->
        <div class="container-xxl py-5">
            <%= render "welcome/shared/testimonials" %>
            
        </div>
        <!-- Testimonial End -->
        

        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <%= render "welcome/shared/footer" %>
           
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy;  <%= Date.today.year %> <a class="border-bottom" href="#">Action+ </a>, Tous droits reserv√©. 
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <div class="footer-menu">
                                <a href="">Home</a>
                                <a href="">Cookies</a>
                                <a href="">Aide</a>
                                <a href="">FAQ</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
