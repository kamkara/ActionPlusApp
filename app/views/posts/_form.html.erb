<%= form_with(model: post, class: "contents") do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= f.label :"le titre" %>
    <%= f.text_field :title, class: "rounded-md w-full", placeholder:"Ecrivez le titre ..." %>
  </div>

  <div class="my-5">
    <%= f.label :Article %>
    <%= f.rich_text_area :content, rows: 4, class: "input-field bg-white", placeholder:"Ecrivez le texte ..." %>
  </div>

  <div class="my-5">
    <%= f.label :status %>
    <%= f.text_field :status, class: "rounded-md" %>
  </div>

  <div class="inline">
    <%= f.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
